[alias]
	amend = commit -a --amend
	br = branch
	ci = commit -s -v
	co = checkout
	di = diff
	fa = fetch --all
	ff = merge --ff-only
	h = head
	ignore = update-index --assume-unchanged
	news = log -p HEAD@{1}..HEAD@{0}
	noff = merge --no-ff
	pullff = pull --ff-only
	reuse = commit -a --amend -C HEAD
	st = status -s
	touch = "!f() { touch $1 && git add $1; }; f"
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
	precomposeunicode = false
[credential]
